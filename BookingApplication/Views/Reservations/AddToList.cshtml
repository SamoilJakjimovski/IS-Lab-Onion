@model BApp.Domain.BookReservation


<h1>Add product to Booking list</h1>

<div class="row">
    <div class="col-4">

        <form asp-action="AddToListConfirmed">
            <input type="hidden" asp-for="ReservationId" />

            <div class="form-group">
                <label asp-for="NumberOfNights"></label>
                <input asp-for="NumberOfNights" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add To List" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>